{
  "description": "Compliance Agent - Regulatory compliance validation (GDPR, PCI-DSS, Security Tokens)",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/compliance-check.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
