{
  "description": "Code Review Agent - Automatic code analysis on file changes",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/review-code.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
