{
  "description": "Accessibility Agent - WCAG compliance checking on UI code",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/check-a11y.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
