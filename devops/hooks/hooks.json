{
  "description": "DevOps Agent - CI/CD security validation",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/ci-validator.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
