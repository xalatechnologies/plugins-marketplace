{
  "description": "Testing Agent - Suggests tests for new code",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/suggest-tests.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
